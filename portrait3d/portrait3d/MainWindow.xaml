<Window x:Class="Portrait3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Portrait 3D" Height="735" Width="770" Loaded="WindowLoaded" Closing="WindowClosing">

    <Grid Name="layoutGrid" Margin="10 0 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Center">
            <Image Name="Image" Width="640" Height="480"/>
        </Viewbox>
        <Label Content="Précision" Grid.Row="2" Margin="10,7,0,0" HorizontalAlignment="Left" Width="58" Height="23" VerticalAlignment="Top" RenderTransformOrigin="0.506,0.899"/>
        <xctk:IntegerUpDown Name="PrecisionSelector" FormatString="N0" Value="1" Minimum="1" Maximum="5" Increment="1" ValueChanged="changedValue" AllowTextInput="False" AllowSpin="True" Grid.Row="2" Margin="68,10,0,0"  Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="48"/>
        <Button Name="StartStopControl" Content="Start" Click="StartStopToggle" Grid.Row="2" Margin="127,10,540,0" Height="20" VerticalAlignment="Top"/>
        <Button Name="ButtonExport" Content="Export model" Click="Export" IsEnabled="False" Grid.Row="2" Margin="0,10,338,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105"/>
        <Button Content="Open export folder..." Click="OpenExportFolder" Grid.Row="2" Margin="0,10,215,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="118"/>
        <Button Click="ButtonResetReconstructionClick" Content="Reset Reconstruction" Grid.Row="2" Height="20" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115"/>
        <StatusBar Grid.Row="3" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="White">
            <StatusBarItem Padding="0 0 0 10">
                <TextBlock Name="StatusBarText"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
